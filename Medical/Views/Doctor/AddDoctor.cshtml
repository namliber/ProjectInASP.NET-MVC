
@{
    ViewBag.Title = "AddDoctor";
    Layout = "~/Views/LayoutPage.cshtml";
}

    <div class="site-section pb-0">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-7 pr-md-7 mb-5">
                    <form action="#" method="post">
                        <div class="form-group">
                            <label for="FirstName">First Name</label>
                            <input name="FirstName" type="text" pattern="[A-Za-z]{1,}" class="form-control" id="FirstName">
                        </div>
                        <div class="form-group">
                            <label for="LastName">Last Name</label>
                            <input name="LastName" type="text" pattern="[A-Za-z]{1,}" class="form-control" id="LastName">
                        </div>
                        <div class="form-group">
                            <label for="email">Phone</label>
                            <input name="Phone" type="tel"  pattern="[0-9]{10}" maxlength="10" class="form-control" id="Phone">
                        </div>
                        <div class="form-group">
                            <label for="message">Email</label>
                            <input name="Email" type="email" class="form-control" id="Email">
                        </div>
                        <div class="form-group">
                            <label for="message">Licence Number</label>
                            <input name="LicenceNumber" type="number" pattern="[A-Za-z]{1,}" class="form-control" id="LicenceNumber">
                        </div>
                        <div class="form-group">
                            <label for="message">Expertist</label>
                            <input name="Expertist" type="text" pattern="[A-Za-z]{1,}" class="form-control" id="Expertist">
                        </div>
                        <div class="form-group">
                            <input type="submit" style="width:auto; background-color:maroon" class="btn btn-primary py-3 px-5" value="Add doctor">
                        </div>
                    </form>
                </div>



            </div> <!-- .row -->

        </div>
    </div>