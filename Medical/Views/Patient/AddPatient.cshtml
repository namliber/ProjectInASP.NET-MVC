
@{
    ViewBag.Title = "AddPatient";
    Layout = "~/Views/LayoutPage.cshtml";
}

<div class="site-section pb-0">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-7 pr-md-7 mb-5">
                <form action="#" method="post">
                    <div class="form-grou  p">
                        <label for="name">First Name</label>
                        <input name="FirstName" type="text" pattern="[A-Za-z]{1,}" class="form-control" id="FirstName" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Last Name</label>
                        <input name="LastName" type="text" pattern="[A-Za-z]{1,}" class="form-control" id="LastName" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Date of Birth</label>
                        <input name="DateofBirth" type="date" pattern="[A-Za-z]{1,}" class="form-control" id="DateofBirth" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Phone</label>
                        <input name="Phone" type="tel"  pattern="[0-9]{10}" maxlength="10"  class="form-control" id="Phone" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Email</label>
                        <input name="Email" type="email" class="form-control" id="Email" required>
                    </div>
                    <div class="form-group">
                        <input type="submit" style="width:auto; background-color:maroon" class="btn btn-primary py-3 px-5" value="Add Patient">
                    </div>
                </form>
            </div>



        </div> <!-- .row -->

    </div>
</div>

